<div id="upload_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Upload IMEI file</h3>
    </div>
    <div class="modal-body">
        <div class="control-group">
            <p>PO SN: <strong id="upload_po_sn"></strong></p>
        </div>
        <div class="control-group">
            <label class="control-label" for="">Attach Files</label>
            <div class="controls">
                <p><strong>Kích thước file phải nhỏ hơn 5MB</strong></p>
                <div class="file-uploader"></div>
                <input type="hidden" name="photo" />
                <input type="hidden" class="onprogress" />
                <p class="help-block"></p>
                <div class="alert" style="display:none;"></div>
                <div class="input-prepend input-append" style="display:none;">
                    <span class="add-on">Download Link</span><input class="span2" type="text" value="" id="link">
                    <button class="btn bt-default copy_link" type="button" data-clipboard-target="#link">
                        <img src="data:image/png;base64,">
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
</div>